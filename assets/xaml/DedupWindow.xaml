<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Archivos Duplicados â€” SysOpt" Width="860" Height="620"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource TB_0D0F1A}"
        WindowStyle="SingleBorderWindow">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <Border Grid.Row="0"
            Background="{DynamicResource TB_131625}"
            BorderBrush="{DynamicResource TB_252B40}"
            BorderThickness="0,0,0,1" Padding="16,12">
      <StackPanel>
        <TextBlock FontFamily="Segoe UI" FontSize="15" FontWeight="Bold"
                   Foreground="{DynamicResource TB_E8ECF4}">
          <Run Text="ðŸ”  Archivos Duplicados"/>
          <Run Foreground="{DynamicResource TB_FF6B84}" Text="  [B5 SHA256]"/>
        </TextBlock>
        <TextBlock Name="txtDedupSummary" FontFamily="Segoe UI" FontSize="11"
                   Foreground="{DynamicResource TB_7880A0}" Margin="0,4,0,0"/>
      </StackPanel>
    </Border>

    <!-- Lista de grupos -->
    <ListBox Name="lbDedupGroups" Grid.Row="1"
             Background="{DynamicResource TB_0D0F1A}" BorderThickness="0"
             Foreground="{DynamicResource TB_E8ECF4}"
             Margin="8,8,8,0"
             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
      <ListBox.ItemContainerStyle>
        <Style TargetType="ListBoxItem">
          <Setter Property="Background"                 Value="Transparent"/>
          <Setter Property="Padding"                    Value="0"/>
          <Setter Property="Margin"                     Value="0,0,0,6"/>
          <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>
      </ListBox.ItemContainerStyle>
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Border Background="{DynamicResource TB_131625}"
                  BorderBrush="{DynamicResource TB_252B40}"
                  BorderThickness="1" CornerRadius="6" Padding="12,10">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>

              <StackPanel>
                <!-- Fila de badges: hash Â· copias Â· tamaÃ±o Â· recuperable -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                  <TextBlock FontFamily="JetBrains Mono" FontSize="11"
                             Foreground="{DynamicResource TB_5BA3FF}"
                             Text="{Binding Hash}"
                             VerticalAlignment="Center" Margin="0,0,10,0"/>
                  <!-- Copias -->
                  <Border Background="{DynamicResource TB_1A2040}"
                          CornerRadius="4" Padding="6,2" Margin="0,0,6,0">
                    <TextBlock FontFamily="Segoe UI" FontSize="10"
                               Foreground="{DynamicResource TB_FFB547}"
                               Text="{Binding Count, StringFormat='{}{0} copias'}"/>
                  </Border>
                  <!-- TamaÃ±o -->
                  <Border Background="{DynamicResource TB_1A2040}"
                          CornerRadius="4" Padding="6,2" Margin="0,0,6,0">
                    <TextBlock FontFamily="Segoe UI" FontSize="10"
                               Foreground="{DynamicResource TB_9BA4C0}"
                               Text="{Binding SizeStr, StringFormat='TamaÃ±o: {0}'}"/>
                  </Border>
                  <!-- Recuperable -->
                  <Border Background="{DynamicResource TB_2A1018}"
                          CornerRadius="4" Padding="6,2">
                    <TextBlock FontFamily="Segoe UI" FontSize="10"
                               Foreground="{DynamicResource TB_FF6B84}"
                               Text="{Binding WasteStr, StringFormat='Recuperable: {0}'}"/>
                  </Border>
                </StackPanel>

                <!-- Lista de archivos del grupo -->
                <TextBlock FontFamily="Segoe UI" FontSize="10"
                           Foreground="{DynamicResource TB_7880A0}"
                           Text="{Binding Files}" TextWrapping="Wrap"/>
              </StackPanel>

              <!-- BotÃ³n eliminar copias (conserva el primero) -->
              <Button Grid.Column="1" Name="btnDedupDelete"
                      Content="ðŸ—‘" Tag="{Binding FullHash}"
                      Width="30" Height="30" Margin="10,0,0,0" VerticalAlignment="Top"
                      Background="{DynamicResource TB_2A1018}"
                      Foreground="{DynamicResource TB_FF6B84}"
                      BorderBrush="{DynamicResource TB_3A2010}" BorderThickness="1"
                      Cursor="Hand" FontSize="14"
                      ToolTip="Eliminar copias (conserva la primera)"/>
            </Grid>
          </Border>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

    <!-- Status bar -->
    <TextBlock Name="txtDedupStatus" Grid.Row="2"
               FontFamily="Segoe UI" FontSize="10"
               Foreground="{DynamicResource TB_7880A0}"
               Margin="16,6,16,4"/>

    <!-- Footer -->
    <Border Grid.Row="3"
            Background="{DynamicResource TB_131625}"
            BorderBrush="{DynamicResource TB_252B40}"
            BorderThickness="0,1,0,0" Padding="16,10">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Name="btnDedupClose" Content="Cerrar" Width="100" Height="30"
                Background="{DynamicResource TB_1A2040}"
                BorderBrush="{DynamicResource TB_3D8EFF}" BorderThickness="1"
                Foreground="{DynamicResource TB_5BA3FF}"
                FontFamily="Segoe UI" FontSize="12" FontWeight="SemiBold"
                Cursor="Hand"/>
      </StackPanel>
    </Border>
  </Grid>
</Window>
